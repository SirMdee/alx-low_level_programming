#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE is not set. Please export the C file name in the CFILE variable."
    exit 1
fi

# Run the preprocessor on the C file and save the output to 'c' file
cpp "$CFILE" > c

# Check if the preprocessor ran successfully
if [ $? -eq 0 ]; then
    echo "Preprocessor completed successfully. Output saved in 'c' file."
else
    echo "Preprocessor encountered an error."
fi

